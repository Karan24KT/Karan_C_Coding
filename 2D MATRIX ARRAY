#include<stdio.h>
int main(){
   /* 2D array declaration*/
   int arr[3][3];
   /*Counter variables for the loop*/
   int i, j, sum = 0;
   for(i=0; i<3; i++) {
      for(j=0;j<3;j++) {
         printf("Enter value for element[%d][%d]:", i, j);
         scanf("%d", &arr[i][j]);
      }
   } printf("\n THE MATRIX IS \n");     
    for(i=0;i<3;i++)    
    {    
        printf("\n");    
        for (j=0;j<3;j++)    
        {    
            printf("%d\t",arr[i][j]);    
        }    
    }   
    
    for(i=0; i<3; i++) {
      for(j=0;j<3;j++) {
         if(i==j){
            sum = sum+arr[i][j];
         }
         
      }
    }
      printf("\nThe sum of diagonal elements is : %d",sum);

   return 0;
}

//OUTPUT
/*
Enter value for element[0][0]:1
Enter value for element[0][1]:2
Enter value for element[0][2]:3
Enter value for element[1][0]:4
Enter value for element[1][1]:5
Enter value for element[1][2]:6
Enter value for element[2][0]:7
Enter value for element[2][1]:8
Enter value for element[2][2]:9

 THE MATRIX IS

1       2       3
4       5       6
7       8       9
The sum of diagonal elements is : 15
